@using StoreApp.Infrastructe.Extensios
@model Product

<div class="col-sm-12 col-md-4 my-2">
    <div class="card h-100" style="width: 18rem;">
        <img style="width:100%; height:200%; object-fit:cover;" class="card-img-top" src="@Model?.ImageUrl"
            alt="Card image">
        <div class="card-body">
            <h5 class="card-title">@Model?.ProductName</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model?.Price.ToString("c")</h6>
            <p class="card-text">Some quick example text to build on the card title and
                make up the bulk of the card's content.</p>
            <div class="btn btn-group">
                <a class="btn btn-primary" asp-action="Get" asp-route-id="@Model?.ProductId">
                    <i class="fa-solid fa-arrow-right"></i>
                    Get Details
                </a>

                <form id="@Model?.ProductId" asp-page="/cart" method="post">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>